@page "/mykitchen/myshoppinglist/createnewlist"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using PersonalRecipeManagerWebApp.Models
@using PersonalRecipeManagerWebApp.Services
@using PersonalRecipeManagerWebApp.Data
@inject DialogService dialogService


<PageTitle>ShoppingListNameCard</PageTitle>

<RadzenTemplateForm TItem="string" class="space-y-4">
    <RadzenTextBox class="p-2" @bind-Value="shoppingListName" Placeholder="Enter the name of your shopping list" Style="width: 350px"/>
    <RadzenButton class="p-2" Text="Submit" ButtonType="ButtonType.Submit" Click="@OnSubmit" />
</RadzenTemplateForm>

